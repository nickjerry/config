function upload() {
	sshpass -p root scp $1 root@$IP:~/
}

function bin2mif() {(
  l=4
  while [ -n "$1" ]; do
	case "$1" in
	  -h) echo bin2mif -l length filename;
		  exit 0 ;;
	  -l) l=$2
		  shift ;;
	   *) f=$1
		 ;;
	esac
	shift
  done

  if [ -n "$f" ]; then
	hexdump -ve 1/$l\ \"%0$(( $l*2 ))x\\n\" $f |
	  sed 's/0/0000/g;s/1/0001/g;s/2/0010/g;s/3/0011/g;
	       s/4/0100/g;s/5/0101/g;s/6/0110/g;s/7/0111/g;
	       s/8/1000/g;s/9/1001/g;s/a/1010/g;s/b/1011/g;
	       s/c/1100/g;s/d/1101/g;s/e/1110/g;s/f/1111/g;'
  else
	echo "no input files"
  fi
)}

function bin2txt() {(
  l=4
  while [ -n "$1" ]; do
	case "$1" in
	  -h) echo bin2txt -l length filename;
		  exit 0 ;;
	  -l) l=$2
		  shift ;;
	   *) f=$1
		 ;;
	esac
	shift
  done

  if [ -n "$f" ]; then
	hexdump -ve 1/$l\ \"%0$(( $l*2 ))x\ \" $f | fmt --width 60
  else
	echo "no input files"
  fi
)}

function bin2coe() {(
  l=4
  while [ -n "$1" ]; do
	case "$1" in
	  -h) echo bin2coe -l length filename;
		  exit 0 ;;
	  -l) l=$2
		  shift ;;
	   *) f=$1
		 ;;
	esac
	shift
  done

  if [ -n "$f" ]; then
	hexdump -ve 1/$l\ \"%0$(( $l*2 ))x\\n\" $f | sed 1i'memory_initialization_radix = 16;\nmemory_initialization_vector ='
  else
	echo "no input files"
  fi
)}

function to-uImage() {
  mips-linux-gnu-objcopy -O binary -R .note -R .comment â€“S $1 $1.bin
  xz -c $1.bin > $1.bin.xz
}

function start-kernel() {
  nemu-mips32 -i ~/u-boot/u-boot.bin -u ~/linux-4.11.4/arch/mips/boot/uImage.bin -S ~/linux-4.11.4/vmlinux $*
}

function wire-direct() {
  sudo-guard
  sudo sh -c 'echo "# interfaces(5) file used by ifup(8) and ifdown(8)
auto lo
iface lo inet loopback

# auto enp5s0
# iface enp5s0 inet dhcp
iface enp5s0 inet static
address 192.168.1.1
netmask 255.255.255.0
gateway 192.168.1.1
broadcast 192.168.1.255" > /etc/network/interfaces'
  sudo ifconfig enp5s0 192.168.1.1
  sudo /etc/init.d/networking restart
  # sudo systemctl restart NetworkManager
  sudo ifconfig enp5s0 192.168.1.1
}

function wired() {
  sudo-guard
  sudo sh -c 'echo "# interfaces(5) file used by ifup(8) and ifdown(8)
auto lo
iface lo inet loopback

auto enp5s0
iface enp5s0 inet dhcp
# iface enp5s0 inet static
# address 192.168.1.1
# netmask 255.255.255.0
# gateway 192.168.1.1
# broadcast 192.168.1.255" > /etc/network/interfaces'
  sudo ifconfig enp5s0 down
  sudo /etc/init.d/networking restart
  sudo ifconfig enp5s0 up
  sudo sed -i 's/managed=false/managed=true/g' /etc/NetworkManager/NetworkManager.conf
  sudo systemctl restart NetworkManager
  sudo dhclient enp5s0
}

