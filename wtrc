function sedr() {
	sed -i "s/$1/$2/g" `grep -rl "$1"`
	return $?
}

function renamer() {
	rename "s/$1/$2/g" `find . -name "*$1*"`
	return $?
}

function banio() {
	nohup $* </dev/null 1>/dev/null 2>&1 &
	return $?
}

